{
  "name": "Rust WebAssembly DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "esbenp.prettier-vscode",
        "panicbit.cargo"
      ]
    }
  },
  "postCreateCommand": "rustup target add wasm32-unknown-unknown && cargo install wasm-bindgen-cli",
  "forwardPorts": [3000], // Forward port for a local server
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "workspaceFolder": "/workspace"
}
